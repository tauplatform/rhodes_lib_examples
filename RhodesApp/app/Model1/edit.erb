<div class="container-fluid">

  <div class="row page-title">
    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
      <a href="<%= url_for :action => :show, :id => @model1.object %>" class="btn btn-default btn-sm pull-left">Cancel</a>
    </div>
    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
      <h3 class="text-center">Edit <%= @model1.attr1 %></h3>
    </div>
    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
      <a href="<%= url_for :action => :delete, :id => @model1.object %>" class="btn btn-danger btn-sm pull-right">Delete</a>
    </div>
  </div>

  <form method="POST" action="<%= url_for :action => :update %>">
    <input type="hidden" name="id" value="<%= @model1.object %>"/>

    
        <div class="form-group">
          <label for="model1[attr1]">Attr1</label>
          <input type="text" id="model1[attr1]" name="model1[attr1]" value="<%= @model1.attr1 %>" <%= placeholder( "Attr1" ) %> class="form-control" />
        </div>
    
        <div class="form-group">
          <label for="model1[attr2]">Attr2</label>
          <input type="text" id="model1[attr2]" name="model1[attr2]" value="<%= @model1.attr2 %>" <%= placeholder( "Attr2" ) %> class="form-control" />
        </div>
    
        <div class="form-group">
          <label for="model1[attr3]">Attr3</label>
          <input type="text" id="model1[attr3]" name="model1[attr3]" value="<%= @model1.attr3 %>" <%= placeholder( "Attr3" ) %> class="form-control" />
        </div>
    
    <button type="submit" class="btn btn-success btn-block">Update</button>
  </form>

</div>
